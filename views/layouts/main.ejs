<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We"
      crossorigin="anonymous"
    />
    <script
      src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.3/dist/umd/popper.min.js"
      integrity="sha384-eMNCOe7tC1doHpGoWe/6oMVemdAVTMs2xqW4mwXrXsW0L84Iytr2wi5v2QjrP/xp"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.min.js"
      integrity="sha384-cn7l7gDp0eyniUwwAZgrzD06kc/tftFf19TOAs2zVinnD/C7E91j9yyk5//jjpt/"
      crossorigin="anonymous"
    ></script>
    <script src="https://unpkg.com/feather-icons"></script>
    <%- style %>
  </head>

  <body>
    <!-- HEADER -->
    <header>
      <nav
        class="navbar navbar-expand-lg navbar-light"
        style="
          padding: 1% 2%;
          display: flex;
          flex-direction: column;
          background-color: rgb(200, 200, 200);
        "
      >
        <div class="container-fluid">
          <a class="navbar-brand fs-1" href="/"> Minify </a>
          <!-- search -->
          <form class="d-none d-lg-flex navbar-nav" style="width: 50%">
            <input
              class="form-control me-2"
              type="search"
              placeholder="Search"
              aria-label="Search"
            />
            <button class="btn btn-outline-dark" type="submit">
              <i data-feather="search"></i>
            </button>
          </form>

          <!-- account section-->
          <div class="d-none d-lg-flex navbar-nav nav-item">
            <% if (locals.isLoggedIn){ %> <% if (locals.user.type == "admin"){
            %>
            <!-- login sebagai penjual -->
            <div class="navbar-nav nav-item dropdown" id="ownerBtn">
              <button
                class="nav-item btn btn-outline-dark dropdown-toggle"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="true"
              >
                <i data-feather="user"></i> Owner
              </button>
              <div
                class="dropdown-menu dropdown-menu-right"
                aria-labelledby="navbarDropdown"
              >
                <a class="dropdown-item" href="/dashboard">Dashboard</a>
                <a class="dropdown-item" href="/message">Messages</a>
                <hr class="dropdown-divider" />
                <a class="logoutBtn dropdown-item" href="/user/logout"
                  >Log Out</a
                >
              </div>
            </div>
            <% } else if (locals.user.type == "customer") { %>
            <!-- login sebagai pembeli -->
            <a
              class="btn btn-outline-dark"
              href="/cart"
              aria-current="page"
              style="margin: 0 5pt"
              id="cartBtn"
            >
              <i data-feather="shopping-cart" style="padding-right: 2px"></i>
            </a>
            <div class="navbar-nav nav-item dropdown" id="consumerBtn">
              <button
                class="nav-item btn btn-outline-dark dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="true"
              >
                <i data-feather="user"></i> Consumer
              </button>
              <div
                class="dropdown-menu dropdown-menu-right"
                aria-labelledby="navbarDropdown"
              >
                <a class="dropdown-item" href="/profile">Profile</a>
                <a class="dropdown-item" href="/wishlist">Wishlist</a>
                <a class="dropdown-item" href="/myorder">My Order</a>
                <a class="dropdown-item" href="/message">Messages</a>
                <hr class="dropdown-divider" />
                <a class="logoutBtn dropdown-item" href="/user/logout"
                  >Log Out</a
                >
              </div>
            </div>
            <% } %> <% } else { %>

            <!-- belum login -->
            <div id="regisLogIn">
              <a href="/register"
                ><button
                  class="nav-item btn btn-outline-dark"
                  role="button"
                  aria-expanded="true"
                >
                  Register
                </button></a
              >
              <a href="/login"
                ><button
                  class="nav-item btn btn-outline-dark"
                  role="button"
                  aria-expanded="true"
                >
                  Log In
                </button>
              </a>
            </div>
            <% } %>
          </div>

          <!-- responsive menu button -->
          <button
            class="navbar-toggler"
            type="button"
            data-bs-toggle="collapse"
            data-bs-target="#navbarResponsiveDropdown"
            aria-expanded="false"
            aria-label="Toggle navigation"
            style="margin-left: auto"
          >
            <span class="navbar-toggler-icon"></span>
          </button>
        </div>
        <div class="container">
          <!-- search & cart & account responsive-->
          <div
            class="navbar-nav d-lg-none collapse"
            id="navbarResponsiveDropdown"
          >
            <form style="display: flex">
              <input
                class="form-control me-2"
                type="search"
                placeholder="Search"
                aria-label="Search"
              />
              <button class="btn btn-outline-dark" type="submit">
                <i data-feather="search"></i>
              </button>
            </form>
            <br />
            <div class="nav-item" id="cartResp">
              <a class="nav-link" aria-current="page" href="/cart"
                ><i data-feather="shopping-cart"></i> Shopping Cart</a
              >
            </div>
            <div class="nav-item" id="consumerResp">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="true"
              >
                <i data-feather="user"></i> Consumer
              </a>

              <div
                class="dropdown-menu dropdown-menu"
                aria-labelledby="navbarDropdown"
              >
                <a class="dropdown-item" href="/profile">Profile</a>
                <a class="dropdown-item" href="/wishlist">Wishlist</a>
                <a class="dropdown-item" href="/myorder">My Order</a>
                <a class="dropdown-item" href="/message">Messages</a>
                <hr class="dropdown-divider" />
                <a class="logoutBtn dropdown-item" href="#">Log Out</a>
              </div>
            </div>
            <div class="nav-item" id="ownerResp">
              <a
                class="nav-link dropdown-toggle"
                href="#"
                id="navbarDropdown"
                role="button"
                data-bs-toggle="dropdown"
                aria-expanded="true"
              >
                <i data-feather="user"></i> Owner
              </a>
              <div
                class="dropdown-menu dropdown-menu"
                aria-labelledby="navbarDropdown"
              >
                <a class="dropdown-item" href="/dashboard">Dashboard</a>
                <a class="dropdown-item" href="/message">Messages</a>
                <hr class="dropdown-divider" />
                <a class="logoutBtn dropdown-item" href="#">Log Out</a>
              </div>
            </div>
            <div id="regisLogInResp">
              <a
                class="nav-item btn btn-outline-dark"
                href="/register"
                role="button"
                aria-expanded="true"
                >Register</a
              >
              <a
                class="nav-item btn btn-outline-dark"
                href="/login"
                role="button"
                aria-expanded="true"
                >Log In</a
              >
            </div>
          </div>

          <!-- navigation bar -->
          <div class="collapse navbar-collapse" id="navbarResponsiveDropdown">
            <ul class="navbar-nav mx-auto">
              <!-- product -->
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="productDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  Product
                </a>
                <ul class="dropdown-menu" aria-labelledby="productDropdown">
                  <form action="/productFilter" method="POST">
                    <% locals.categories.forEach(c => { %>

                    <button
                      class="dropdown-item link"
                      type="submit"
                      name="category"
                      value="<%= c.nama %>"
                    >
                      <%= c.nama %>
                    </button>

                    <% }) %>
                  </form>
                  <hr class="dropdown-divider" />
                  <a class="dropdown-item" href="/product">Semua Produk</a>
                </ul>
              </li>
              <!-- about us -->
              <li class="nav-item dropdown">
                <a
                  class="nav-link dropdown-toggle"
                  href="#"
                  id="aboutUsDropdown"
                  role="button"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  About Us
                </a>
                <ul class="dropdown-menu" aria-labelledby="aboutUsDropdown">
                  <li>
                    <a class="dropdown-item" href="/Terms">Terms</a>
                  </li>
                  <li>
                    <a class="dropdown-item" href="/FAQ">FAQ</a>
                  </li>
                </ul>
              </li>
              <!-- how to order -->
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/HowToOrder"
                  >How To Order</a
                >
              </li>
            </ul>
          </div>
        </div>
      </nav>
    </header>

    <!-- ISI -->
    <%- body %>

    <!-- FOOTER -->
    <footer>
      <div style="padding-top: 2%; background-color: rgb(200, 200, 200)">
        <div class="container text-center text-dark">
          <div class="row row-cols-2 row-cols-lg-4 g-3">
            <div class="col text-dark">
              <div class="header">
                <h5>Minify</h5>
              </div>
              <div>
                <a class="nav-link text-dark" href="/bestSeller"
                  >Best Seller
                </a>
                <a class="nav-link text-dark" href="/newArrival">New Arrival</a>
                <a class="nav-link text-dark" href="/product">Products</a>
              </div>
            </div>

            <div class="col">
              <div class="header">
                <h5>About Us</h5>
              </div>
              <div>
                <a class="nav-link text-dark" href="/Company">Company</a>
                <a class="nav-link text-dark" href="/Terms">Terms</a>
              </div>
            </div>
            <div class="col">
              <div class="header">
                <h5>FAQ</h5>
              </div>
              <div>
                <a class="nav-link text-dark" href="/FAQ">FAQ</a>
                <a class="nav-link text-dark" href="/HowToOrder"
                  >How To Order</a
                >
              </div>
            </div>
            <div class="col">
              <div class="header">
                <h5>Contact Us</h5>
              </div>
              <div>
                <a class="nav-link text-dark" href=""
                  ><i data-feather="instagram"></i> Instagram</a
                >
                <a class="nav-link text-dark" href=""
                  ><i data-feather="phone"></i> Phone</a
                >
                <a class="nav-link text-dark" href=""
                  ><i data-feather="mail"></i> Email</a
                >
              </div>
            </div>
          </div>
          <div style="padding: 10px 0">&copy; MINIFY</div>
        </div>
      </div>
    </footer>

    <%- script %>

    <script>
      src = "https://code.jquery.com/jquery-3.5.1.min.js";
      src =
        "https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js";
      feather.replace();
    </script>
  </body>
</html>
