<style>
  .card {
    background-color: white;
    border-width: 2px;
  }
  .card-body {
    color: black;
  }
  .img-thumbnail {
    height: 200px;
    max-width: 100%;
    width: 250px;
    max-height: 100%;
  }
</style>

<!-- ISI -->
<section>
  <div style="background-color: #7a7373">
    <br /><br />
    <div class="container-sm py-4" style="background-color: #c4c4c4">
      <% if(products.length > 0) { %>
      <div class="row mx-5">
        <div
          class="text-left"
          style="margin-top: 50px; font-size: 30px; font-weight: bold"
        >
          <label for="headerText">Cart</label>
          <br /><br />
        </div>
      </div>
      <!-- item -->
      <!-- looping product dalam session cart -->
      <% products.forEach(function(items){%>
      <div class="row mx-5">
        <div class="col-lg-12">
          <div class="card mb-5">
            <div class="card-body">
              <div class="row mb-1">
                <div class="col-md-5 col-lg-3 col-xl-3">
                  <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                    <img
                      src="<%= items.item.image %>"
                      alt="Produk"
                      class="img-thumbnail"
                    />
                  </div>
                </div>
                <div class="col-md-7 col-lg-9 col-xl-9">
                  <div>
                    <div class="d-flex justify-content-between">
                      <div class="mt-5">
                        <h5><%= items.item.name %></h5>
                        <p class="mb-2 text-uppercase small">Product Info</p>
                        <p class="mb-3 text-uppercase small">Ready Stock</p>
                      </div>
                      <!--Button Kanan-->

                      <div class="row mt-5 me-0 m">
                        <div class="mb-0 w-100">
                          <div class="input-group">
                            <span class="input-group-btn">
                              <a href="/cart/reduce/<%= items.item._id %>"
                                ><button
                                  type="button"
                                  class="btn btn-default btn-number"
                                >
                                  <i
                                    data-feather="minus-square"
                                  ></i></button></a
                            ></span>
                            <input
                              type="text"
                              disabled="disabled"
                              value="<%= items.qty %> "
                              class="form-control input-number form-select-sm"
                            />
                            <span class="input-group-btn">
                              <a href="/cart/increase/<%= items.item._id %>"
                                ><button
                                  type="button"
                                  class="btn btn-default btn-number"
                                >
                                  <i data-feather="plus-square"></i></button></a
                            ></span>
                          </div>
                        </div>
                      </div>
                      <div class="mt-5 me-4" style="font-size: x-large">
                        <p>Rp <%= items.price %></p>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <% }); %>
      <div class="row mx-5">
        <div class="col-lg-12">
          <div class="card mb-5">
            <div class="card">
              <div class="card-body row">
                <div class="col-sm-6">
                  Total Unit = <%= totalQty %>
                  <br />
                  Total Harga = Rp <%= totalPrice %>
                </div>
                <div class="text-end col-sm-6 mt-3">
                  <a href="/checkout">
                    <button
                      type="submit"
                      class="btn btn-light btn-sm border-dark"
                    >
                      Checkout
                    </button>
                  </a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <br /><br />
    <!-- jika tidak ada product dalam session cart -->
    <% } else {%>
    <div class="col-md-12">
      <div
        class="div"
        style="background-color: #c4c4c4; text-align: center; height: 550px"
      >
        <h1 class="mt-5" style="position: relative; padding-top: 220px">
          Tidak Ada Produk
        </h1>
      </div>
    </div>
    <% } %>
  </div>
</section>

<script>
  feather.replace();
</script>
